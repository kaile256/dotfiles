root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.fish]
indent_style = space
indent_size = 4

[*.py]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space

[*.snippets]
# `autocmd FilType` sometimes fails.
indent_style = space

[.gitconfig]
indent_style = tab

[Makefile]
indent_style = tab
indent_size = 4

