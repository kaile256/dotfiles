! From: .Xresources

! Font rendering {{{1
! Ref: https://wiki.archlinux.jp/index.php/%E3%83%95%E3%82%A9%E3%83%B3%E3%83%88%E8%A8%AD%E5%AE%9A
Xft.dpi: 96
Xft.antialias: 1
Xft.autohint: 1
Xft.hinting: 1
Xft.rgba: rgb
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Reduce lines between lines.
URxvt.lineSpace: -1
! Note: Set a negative number to reduce whitespace width between characters,
! but it demands bigger font size not to replace wide characters with tofu.
URxvt.letterSpace: 0

! Note: To precede performance, use X11 font instead of xft font; if you use
! xft font, set antialias=false.
! Ref for fonts on each system: http://malkalech.com/xresources_magic#i-7

#define NERDFONT      SFMono Nerd Font Mono:Bold:size=9
#define BOLD_NERDFONT SFMono Nerd Font Mono:Heavy:size=9
#define FONTW      Noto Sans CJK JP:size=9
#define BOLD_FONTW Noto Sans CJK JP:Bold:size=9

#define FONT_SET xft:NERDFONT

#ifdef FONT
#define FONT_SET xft:FONT,xft:FONTW,xft:NERDFONT

#else
#ifdef FONTW
#define FONT_SET xft:NERDFONT,xft:FONTW

#else
#define FONT_SET xft:NERDFONT
#endif
#endif

URxvt.font: FONT_SET

#ifdef BOLD_FONT
#define BOLD_FONT_SET xft:BOLD_FONT,xft:BOLD_FONTW,xft:BOLD_NERDFONT
#else
#ifdef BOLD_FONTW
#define BOLD_FONT_SET xft:BOLD_NERDFONT,xft:BOLD_FONTW
#else
#define BOLD_FONT_SET xft:BOLD_NERDFONT
#endif
#endif

URxvt.boldFont: BOLD_FONT_SET

! Font list and Spacing
URxvt.allow_bold: true
URxvt.kanji_encoding: UTF-8


XTerm*faceName:           FONT
XTerm*faceNameDoublesize: FONTW
XTerm*faceSize:           FONT_SIZE

! scaleHeight: the height between line and line
!   (available: 0.9 ~ 1.5; default: 1.0)
XTerm*scaleHeight: 0.9

! Fonts and Encoding
XTerm*utf8:      true
XTerm*locale:    true
XTerm*utf8Title: true
! cjk: Chinese, Japanese, Korean
XTerm*cjkWidth : True
