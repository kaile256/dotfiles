! From: .Xresources

! Font rendering {{{1
! Ref: https://wiki.archlinux.jp/index.php/%E3%83%95%E3%82%A9%E3%83%B3%E3%83%88%E8%A8%AD%E5%AE%9A
Xft.dpi: 96
Xft.antialias: 1
Xft.autohint: 1
Xft.hinting: 1
Xft.rgba: rgb
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Reduce lines between lines.
URxvt.lineSpace: -1
! Note: Set a negative number to reduce whitespace width between characters,
! but it demands bigger font size not to replace wide characters with tofu.
URxvt.letterSpace: 0

#define BOLD_FONT_STYLE Heavy
! Ref for fonts on each system: http://malkalech.com/xresources_magic#i-7
#define FONT_NAME SFMono Nerd Font Mono
#define FONT_STYLE Bold
! #define FONT_NAME FiraCode Nerd Font Mono:Medium
! #define FONT_NAME DejaVuSansMono Nerd Font Mono:Bold
#define FONT_SIZE 9

! Note: To precede performance, use X11 font instead of xft font; if you use
! xft font, set antialias=false.
#define FONT_OPT  size=FONT_SIZE:antialias=true
#define FONT      xft:FONT_NAME:FONT_STYLE:FONT_OPT

#define FONTW_NAME Noto Sans Mono CJK Nerd Font
#define FONTW_SIZE 18
#define FONTW_OPT  size=FONTW_SIZE:antialias=true
#define FONTW      xft:FONTW_NAME:FONTW_OPT

#ifndef FONTW
#define FONT_SET FONT
#define FONTW FONT
#else
#define FONT_SET FONT,FONTW
#endif
URxvt.font: FONT_SET

#define BOLD_FONT  xft:FONT_NAME:BOLD_FONT_STYLE:FONT_OPT
#define BOLD_FONTW xft:FONTW_NAME:BOLD_FONT_STYLE:FONTW_OPT

#ifndef BOLD_FONTW
#define BOLD_FONT_SET BOLD_FONT
#define BOLD_FONTW BOLD_FONT
#else
#define BOLD_FONT_SET BOLD_FONT,BOLD_FONTW
#endif
URxvt.boldFont: BOLD_FONT_SET

! Font list and Spacing
URxvt.allow_bold: true
URxvt.kanji_encoding: UTF-8


XTerm*faceName:           FONT
XTerm*faceNameDoublesize: FONTW
XTerm*faceSize:           FONT_SIZE

! scaleHeight: the height between line and line
!   (available: 0.9 ~ 1.5; default: 1.0)
XTerm*scaleHeight: 0.9

! Fonts and Encoding
XTerm*utf8:      true
XTerm*locale:    true
XTerm*utf8Title: true
! cjk: Chinese, Japanese, Korean
XTerm*cjkWidth : True
