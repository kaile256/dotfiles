! Colors for XTerm {{{1
! Use black in background
XTerm*reverseVideo: on
XTerm*borderWidth: 0

XTerm.foreground: _fg
XTerm.background: _bg

XTerm.color0:  _black
XTerm.color1:  _red
XTerm.color2:  _green
XTerm.color3:  _yellow
XTerm.color4:  _blue
XTerm.color5:  _magenta
XTerm.color6:  _cyan
XTerm.color7:  _white
XTerm.color8:  br_black
XTerm.color9:  br_red
XTerm.color10: br_green
XTerm.color11: br_yellow
XTerm.color12: br_blue
XTerm.color13: br_magenta
XTerm.color14: br_cyan
XTerm.color15: br_white

!! Forbid bold font faces; bold type is light blue.
!XTerm*colorBDMode: true
!XTerm*colorBD: rgb:82/a4/d3
!! Do not underscore text, underlined text is white.
!XTerm*colorULMode: true
!XTerm*colorUL: rgb:e4/e4/e4

! Colors for URxvt {{{1

! Color Scheme and Opacity or Transparency:
! Set 'depth' to 32, with a composite-manager like `xcompmgr` or `picom`.
! For fake transparecy instead, use 'transparent'.

! Note: Apply the opacity on color config in `[]`
! Note: Keep 'depth' 32
! Note: Run composite-manager ike `xcompmgr` or `picom`
URxvt.depth: 32

!! 'transparent' only in fake; adjust the percentage with 'shading'
!URxvt.transparent: true
!URxvt.shading: 70

!! Fade (in percentage) the other windows, which gets no focus.
!URxvt.fading: 100

! [100]: 100% itself; background is completely itself
! [0]:   0% itself; fake-background
URxvt.color0:  [90]_black
URxvt.color1:  [90]_red
URxvt.color2:  [90]_green
URxvt.color3:  [90]_yellow
URxvt.color4:  [90]_blue
URxvt.color5:  [90]_magenta
URxvt.color6:  [90]_cyan
URxvt.color7:  [90]_white
URxvt.color8:  [90]br_black
URxvt.color9:  [90]br_red
URxvt.color10: [90]br_green
URxvt.color11: [90]br_yellow
URxvt.color12: [90]br_blue
URxvt.color13: [90]br_magenta
URxvt.color14: [90]br_cyan
URxvt.color15: [90]br_white
!URxvt.foreground:  [90]#ebdbb2
!URxvt.background:  [90]#282828
URxvt.foreground: [90]_white
URxvt.background: [80]_black

!! Italic/Bold/UnderLine
!URxvt.colorIT:     [90]#8ec07c
!URxvt.colorBD:     [90]#fe8019
!URxvt.colorUL:     [90]#83a598

!URxvt.scrollColor: [90]#504945
!URxvt.troughColor: [90]#3C3836  ! bg-color for scrollbar.

! Keybinds {{{1
! Use Alt-key
XTerm*metaSendsEscape: True

! Ctrl+Shift is a shortcut to input any Unicode character like <C-v> in vim
! https://www.reddit.com/r/urxvt/comments/35x03n/if_youve_been_vexed_by_urxvts_picture_insert_mode/
URxvt.iso14755: false
URxvt.iso14755_52: false

! https://unix.stackexchange.com/questions/294337/rebinding-ctrl-alt-cv-to-ctrl-shift-cv-in-urxvt-9-20/329556#329556
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
! Disable keybinds with `builtin-string:`
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

! Misc. for XTerm {{{1
XTerm*termName: xterm-256color
!exec xterm -geometry 80x66+0+0 -name login
!xterm -geometry 80x50+494+51 &
!xterm -geometry 80x20+494-0 &

XTerm*scrollBar:   false
XTerm*cursorBlink: true

! Misc. for URxvt {{{1
URxvt.termName: rxvt-unicode

! Window-Size (default: 80x24)
!URxvt.geometry:             96x32

! Scroll-Bar
URxvt.scrollBar_right:    false
! true: no background (= no floating) on scrollbar.
URxvt.scrollBar_floating: false
URxvt.scrollstyle:        plain

URxvt.cursorBlink:        true
URxvt.cursorUnderline:    true
! true: Hide the pointer on typing keyboard
URxvt.pointerBlank:       true

URxvt.visualBell:         false
URxvt.saveLines:          3000

! Extentions
! CAUTION: spare extra extentions to save RAM.
!URxvt.perl-ext:
!URxvt.perl-ext-common:
