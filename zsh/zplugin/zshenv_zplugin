#### From: .profile
#### Ref: xdg.sh
#### Ref: env.sh
#### Ref: path.sh
#### Ref: .zshrc

## XDG
export HISTFILE="$XDG_DATA_HOME"/zsh/history
# where Zplugin-code resides, e.g., */.zplugin/bin
export HOME_DIR=$XDG_DATA_HOME/zsh/zplugin
# where Zplugin should create all working directories, e.g., */.zplugin
export BIN_DIR=$XDG_DATA_HOME/zsh/zplugin

## Plugins Cache Directory
export COMPLETIONS_DIR=$XDG_CACH_HOME/zsh/completions # */zplugin/completions
export PLUGINS_DIR=$XDG_CACH_HOME/zsh/plugins # */zplugin/plugins
export SNIPPETS_DIR=$XDG_CACH_HOME/zsh/snippets # */zplugin/snippets
export COMPDUMP_PATH=$XDG_CACH_HOME/zsh/zcompdump # .zcompdump file and so on
