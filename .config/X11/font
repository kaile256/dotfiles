
!! Ref for fonts on each system: http://malkalech.com/xresources_magic#i-7

!#define NAME_FONT xft:MesloLGSDZ Nerd Font
!#define SIZE_FONT 11
!#define OPT_FONT  size:SIZE_FONT:antialias=true
!#define FONT      NAME_FONT:SIZE_FONT

!#define NAME_FONTW xft:MesloLGSDZ Nerd Font
!#define SIZE_FONTW 9
!#define OPT_FONTW  size:SIZE_FONTW:antialias=true
!#define FONTW      NAME_FONTW:SIZE_FONTW

#define NAME_FONT DejaVuSansMono Nerd Font
#define SIZE_FONT 13
#define OPT_FONT  size=SIZE_FONT:antialias=true
#define FONT  xft:NAME_FONT:OPT_FONT

#define NAME_FONTW Migu1M Nerd Font
#define SIZE_FONTW 12
#define OPT_FONTW  size=SIZE_FONTW:antialias=true
#define FONTW  xft:NAME_FONTW:OPT_FONTW

#ifndef FONTW
  #define FONT_SET FONT
#else
  #define FONT_SET FONT,FONTW
#endif

XTerm*faceName:           FONT
XTerm*faceNameDoublesize: FONTW
XTerm*faceSize:           FONT_SIZE

URxvt.font: FONT_SET

!URxvt.font: xft:NAME_FONT:size=SIZE_FONTW:antialias=true,NAME_FONTW:size=12:antialias=true
!XTerm*faceName: xft:MesloLGS Nerd Font:size=14:antialias=true
!XTerm*faceNameDoublesize: xft:Migu 1M
!XTerm*faceSize: 14

