# for dein's hook {{{1
snippet hook_add
alias ad add
  hook_add = 'runtime add/${1:`substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g')`}.vim'

snippet hook_source
alias so sou sour
  hook_source = 'runtime source/${1:`substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g')`}.vim'

snippet hook_post_source
alias po pos post
  hook_post_source = 'runtime post/${1:`substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g')`}.vim'

snippet on_event
alias ev eve even
  on_event = ['${1:BufRead}']

snippet on_ft
alias ft
  on_ft = ['${1:vim}']

snippet on_map
alias ma map
  on_map = {${1:nox} = ['<Plug>(`substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g')`']}

snippet on_func
alias fu fn fun func
  on_func = ['`substitute(substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g'), '-', '_', 'g')`#${0}']

snippet on_cmd
alias cm cmd com
  on_cmd = ['`substitute(substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', ''), '\.n\=vim\|n\=vim-', '', 'g')`${0}']

snippet hook_done_update
alias du up don done
  hook_done_update = '${1:call remote#host#UpdateRemotePlugins()}'

snippet exe
alias e
  ${1:exe 'e' g:dein_github_dir .'/`substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g')`}/${2:plugin/}${4:`substitute(substitute(matchstr(getline(search('repo =', 'bnW')), "'.*'"), "'", '', 'g'), '.*/', '', '')`.vim}'
  ${0}
  write

snippet build
alias bu bui ins install
  build = '${1:./install.sh}'

snippet type
alias ty typ
  type = 'git${0}'

snippet on_path
alias pa pat pah
  on_path = '${0:#:\.ext (conpared in "=~#"}'

snippet on_source
alias ons onso os oso
  on_source = ['${1:vim-fugitive}']

snippet depend
alias de dep dp dpd dpn dn
  depend = ['${1:vim-fugitive}']

snippet trusted to use in "sudo" for dein
alias sudo
  trusted = 1
snippet timeout for dein
alias time timeout
options head
  timeout = ${1:#:1(sec)}

snippet script_type plugin for dein
alias plugin
  script_type = 'plugin'
snippet script_type indent for dein
alias indent
  script_type = 'indent'
snippet script_type ftplugin for dein
alias ftplugin
  script_type = 'plugin'
snippet script_type colors for dein
alias colors
  script_type = 'colors'
snippet script_type syntax for dein
alias syntax
  script_type = 'syntax'

