snippet source &ft.vim
alias so sou ft
options head
  source `expand('%:t:r')`.vim

snippet TARGET
alias ta tg tar ${ $0 0 ${0 {0
  \${0:TARGET}

snippet neosnippets
alias neo sample sam sm
  `split(&cms, '%s')[0]` Sample: Shougo/neosnippet-snippets/neosnippets/`expand('%:t:r')`.snip

snippet snippet
alias sn sni snip si sin
options head indent word
  snippet ${1:#:Title}
  options ${2:head}
  `repeat(' ', &tabstop)`${0:TARGET}

