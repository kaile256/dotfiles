snippet tap "Dein: guard for plugin config under ftplugin/" b
if !dein#tap('${1:${VISUAL:vim-plugin}}') | finish | endif

endsnippet

snippet sandwich "b:sandwich_magicchar_f_patterns" w
let b:sandwich_magicchar_f_patterns += [{
      \ 'bra'    : '${1}',
      \ 'ket'    : '${2}',
      \ 'header' : '${3:\<\%(\h\k*:\)*\h\k*}',
      \ 'footer' : '${4}',
      \ }]
endsnippet
