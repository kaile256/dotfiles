global !p
def is_spec_file():
  return re.search(r'_spec\.lua$', vim.eval('@%'))


endglobal


context "is_spec_file()"
snippet '(b(:?usted)?)?d(:?e(:?s(:?cribe)?)?)?' "describe($1)" br
`!p
if match.group(1):
  snip.rv = 'busted.'
`describe("${1:description}", function()
  ${2:${VISUAL}}
end)
endsnippet

context "is_spec_file()"
snippet '(b(:?usted)?)?it' "it($1)" br
`!p
if match.group(1):
  snip.rv = 'busted.'
`it("${1:description}", function()
  ${2:${VISUAL}}
end)
endsnippet

context "is_spec_file()"
snippet 'b(:?e(:?f(:?ore)?)?)?e(:?ach)?' "before_each($1)" br
before_each(function()
  ${3:${VISUAL}}
end)
endsnippet

context "is_spec_file()"
snippet 'a(:?f(:?t(:?er)?)?)?e(:?ach)?' "after_each($1)" br
after_each(function()
  ${3:${VISUAL}}
end)
endsnippet

