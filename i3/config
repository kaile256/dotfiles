    bindsym $SuperS+l exec --no-startup-id i3-msg exit, mode "default"
    bindsym $SuperS+r exec --no-startup-id systemctl reboot, mode "default"
    bindsym $SuperS+p exec --no-startup-id systemctl poweroff, mode "default"
    bindsym $SuperS+q exec --no-startup-id systemctl poweroff, mode "default"

